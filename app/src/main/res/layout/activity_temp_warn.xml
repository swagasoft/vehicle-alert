<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#060606"
    tools:context="coding.swagasoft.vehiclealert.TempWarnActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView27"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/temperature_indicator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Temperature Indicator"
        android:id="@+id/textView62"
        android:textColor="#ffffff"
        android:layout_below="@+id/imageView27"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="If you are driving when this light shows goes on, pull over safely as soon as possible and shut off the engine to let everything cool down. Let the engine cool down for at least 30 minutes before attempting to remove the radiator cap. NEVER ATTEMPT TO REMOVE A RADIOTOR CAP OFF OF A HOT ENGINE!  And remember to open with thick rag to protect your hand. Check the overall fluid level , if the level is low , you can add just water temporally to get to auto repair center.   "
        android:id="@+id/textView63"
        android:layout_below="@+id/textView62"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
