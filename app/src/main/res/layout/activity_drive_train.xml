<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#060606"
    tools:context="coding.swagasoft.vehiclealert.DriveTrainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/drivetrain_trouble_indicator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Drivetrain Trouble"
        android:textColor="#ffffff"
        android:id="@+id/textView14"
        android:layout_below="@+id/imageView6"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Powertrain Malfunction is a warning light that illuminated when the vehicle is experiencing a condition â€“ if driven can cause damage to the engine, transmission or drivetrain. The warning is to let you know to decrease the load on the vehicle (typically speed). It is possible if it keeps occurring that it can activate another warning light (can be checked using a scan-tool). If the problem resolves itself the warning may go off. "
        android:id="@+id/textView24"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
