<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#060606"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="coding.swagasoft.vehiclealert.IntegentStopStartActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView147"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/intelligent_stop_start_indicator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Start/Stop System Function"
        android:id="@+id/textView322"
        android:textColor="#ffffff"
        android:layout_below="@+id/imageView147"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Start/Stop is a function that temporarily switches off the engine when the vehicle is not moving, for instance in heavy traffic or at a traffic light to help reduce fuel consumption. Moreover, when Start/Stop is activated and the brakes are applied until the vehicle comes to a standstill, the engine will auto-stop automatically if the driver keeps the brake pedal depressed.  "
        android:id="@+id/textView323"
        android:layout_below="@+id/textView322"
        android:layout_alignParentStart="true" />
</RelativeLayout>
