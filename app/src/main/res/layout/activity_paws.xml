<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#060606"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="coding.swagasoft.vehiclealert.PawsActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView151"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/p_aws_indicator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Precision-All-Wheel Steer"
        android:id="@+id/textView330"
        android:textColor="#ffffff"
        android:layout_below="@+id/imageView151"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="This system that is able to independently adjust the toe angle of the rear wheels, allowing for fully independent rear steering. This system enables the rear wheels to adjust toe angles independently of each other. Depending on speed, the angle of the rear wheels varies slightly to help maneuver tight areas, aid in smooth lane changes and assist in braking stability. "
        android:id="@+id/textView331"
        android:layout_below="@+id/textView330"
        android:layout_alignParentStart="true" />
</RelativeLayout>
