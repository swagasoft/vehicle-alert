<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#060606"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="coding.swagasoft.vehiclealert.TractionContrlActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView82"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/traction_control_system" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Traction Control System (tcs)"
        android:id="@+id/textView189"
        android:layout_below="@+id/imageView82"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Traction control is most effective when accelerating from a stopped or slowed position, or when trying to accelerate up a slippery hill. This feature provides a lot of benefits to drivers, from making driving smoother to helping them stay in control of the car on icy roads or during rainy weather. However , this indicates a fault in the system. "
        android:id="@+id/textView190"
        android:layout_below="@+id/textView189"
        android:textColor="#ffffff"
        android:layout_alignParentStart="true" />
</RelativeLayout>
