<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#060606"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="coding.swagasoft.vehiclealert.SlipOffIndicatorActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView84"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/vsc_slip_off_indicator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Stability Control Off Indicator"
        android:id="@+id/textView193"
        android:layout_below="@+id/imageView84"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Though traction control provides benefits, it can sometimes be an impediment to progress, such as when entering or leaving a parking space with rutted snow. Some systems are so sensitive that at the first sign of wheel slip, they immediately reduce power or apply the brakes so much that you go nowhere. Fortunately, a traction control system can be turned off in most vehicles."
        android:id="@+id/textView194"
        android:layout_below="@+id/textView193"
        android:textColor="#ffffff"
        android:layout_alignParentStart="true" />
</RelativeLayout>
