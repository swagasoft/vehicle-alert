<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#060606"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="coding.swagasoft.vehiclealert.HillStartActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView119"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/hiill_start" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" Hill Start Assist (HSA) Off "
        android:id="@+id/textView260"
        android:textSize="50sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/imageView119"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sensors in the vehicle are used to detect when a vehicle is on an incline. The hill start assist maintains the brake pressure for a set period of time as you switch from the brakes to the gas pedal. Once you press the accelerator, it releases the brake.  In cars with manual transmission that have this feature, the hill start assist will also maintain brake pressure until the driver lets up on the clutch. This indicate you have switch off the system."
        android:id="@+id/textView261"
        android:layout_below="@+id/textView260"
        android:layout_alignParentStart="true" />
</RelativeLayout>
