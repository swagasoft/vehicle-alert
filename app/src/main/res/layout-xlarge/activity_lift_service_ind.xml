<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#060606"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="coding.swagasoft.vehiclealert.LiftServiceIndActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView48"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/lift_service_indicator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Maintenance Required Indicators "
        android:id="@+id/textView106"
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:layout_below="@+id/imageView48"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="This indicator is used only as a reminder that routine maintenance is needed, such as an oil change, although the car on the lift could suggest a more serious problem. If there is additional text shown identifying trouble with a specific vehicle system, contact your dealer or authorized service center as soon as possible."
        android:id="@+id/textView107"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView106"
        android:layout_alignEnd="@+id/textView106" />
</RelativeLayout>
