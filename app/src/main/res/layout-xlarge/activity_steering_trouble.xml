<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#060606"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="coding.swagasoft.vehiclealert.SteeringTroubleActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView26"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/steering_trouble_indicator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Power Steering Warning"
        android:textColor="#ffffff"
        android:id="@+id/textView61"
        android:textSize="50dp"
        android:layout_below="@+id/imageView26"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="This indicator means theirs is a fault in the power steering system, which will then most likely be disable until you get it fixed. There may be a follow up indicator (EPS).  Fixing this problem requires a professional. On hydraulic  power steering systems, one of the most common purpose for the warning light is very low power steering fluid. "
        android:id="@+id/textView18"
        android:layout_below="@+id/textView61"
        android:layout_alignParentStart="true" />
</RelativeLayout>
