<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#060606"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="coding.swagasoft.vehiclealert.ElectShiftMalActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView43"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/electric_shift_malfunction" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Automatic Transmission/Automatic Gearbox Warning "
        android:id="@+id/textView96"
        android:layout_below="@+id/imageView43"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="The automatic transmission warning light means there&apos;s an issue with the transmission, possibly the fluid temperature, fluid level, or pressure. If the computer detects any abnormal readings from the sensors, a code will be stored and the automatic transmission indicator light will turn on to alert the driver of possible issues. Malfunctioning sensors will also give false readings causing the light to come on so always have the sensors tested again. One of the most common issues that causes this indicator light to illuminate is that the transmission fluid temperature is higher than normal. "
        android:id="@+id/textView97"
        android:layout_below="@+id/textView96"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
