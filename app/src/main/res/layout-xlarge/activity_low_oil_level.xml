<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#060606"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="coding.swagasoft.vehiclealert.LowOilLevelActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView15"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/low_oil_level_symbol" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Low Oil Pressure"
        android:id="@+id/textView41"
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:layout_below="@+id/imageView15"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Low oil pressure mean the oil pressure is low and any number of things could cause the problem. 1.	There is a leakage. 2.	Oil pressure sensor is bad. 3.	Oil pump is bad. 4.	Oil level is that low to where the oil pump is not getting enough oil. DO NOT RUN THE ENGINE WITH THIS LIGHT ON! "
        android:id="@+id/textView42"
        android:layout_below="@+id/textView41"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
