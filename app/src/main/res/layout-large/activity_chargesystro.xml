<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#060606"
    tools:context="coding.swagasoft.vehiclealert.ChargesystroActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/charge_system_trouble_indicator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Charge System Error"
        android:textSize="40sp"
        android:id="@+id/textView12"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your alternator or voltage regulator may be failing causing the battery not to charge properly. When this happens the drop in voltage will cause the charging system failure light to come on. The alternator is responsible for maintaining the proper the proper charge on the battery .When either of these two components is not working properly, this causes a fluctuation in the battery charging system. Checks- alternator belt, battery terminal , charging system connection.   "
        android:id="@+id/textView19"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView12"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
