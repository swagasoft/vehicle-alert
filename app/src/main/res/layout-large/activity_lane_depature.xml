<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#060606"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="coding.swagasoft.vehiclealert.LaneDepatureActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView120"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/lane_departure_indicator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lane Departure Warning (LDW)"
        android:id="@+id/textView263"
        android:layout_below="@+id/imageView120"
        android:textSize="40dp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lane departure warning alerts you that your car is about to veer out of lane and warns you to get back into lane. Thatâ€™s the basic idea, but there are several versions of the technology available now, including ones that react and steer away from the lane edge and even proactively keep the car centered.  All forms of lane departure warning employ a low-cost camera mounted in the windshield near the rear view mirror that continuously watches the striped and solid lane markings of the road ahead."
        android:id="@+id/textView266"
        android:layout_below="@+id/textView263"
        android:layout_alignParentStart="true" />
</RelativeLayout>
