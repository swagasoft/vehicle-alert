<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#060606"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="coding.swagasoft.vehiclealert.MasterWarningActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView16"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/master_warning_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Master Warning Light"
        android:id="@+id/textView45"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:layout_below="@+id/imageView16"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="The master warning light is usually accompanied by another light and it indicates that one or more warning system have been detected. The following are some potential reasons for while the master warning light indicates. *No key warning *Low fuel warning. *trunk open warning *Low battery voltage *Low tire pressure *Fuel cap is loosed "
        android:id="@+id/textView46"
        android:layout_below="@+id/textView45"
        android:layout_alignParentStart="true" />
</RelativeLayout>
