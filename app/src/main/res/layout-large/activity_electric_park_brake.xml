<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#060606"

    tools:context="coding.swagasoft.vehiclealert.electricParkBrakeActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView42"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/electric_park_brake" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" Electric Park Brake (EPB) Fault Indicator "
        android:id="@+id/textView94"
        android:layout_below="@+id/imageView42"
        android:textSize="40dp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="  (EPB) are used on passenger vehicles to hold the vehicle stationary on grades and flat roads . This was accomplished inherited using a manual parking brake. With electric park brakes, the driver activates the holding mechanism with a button and the brake pads are then electrically applied onto the rear brakes. This indicates there is a fault in the system. It will flash or remain lit if a fault is detected. It will be safe to drive, but the parking brake will not operate properly. "
        android:id="@+id/textView95"
        android:layout_below="@+id/textView94"
        android:layout_alignParentStart="true" />
</RelativeLayout>
