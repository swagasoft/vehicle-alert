<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#060606"
    tools:context="coding.swagasoft.vehiclealert.brakeHoldInActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView140"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/brake_hold_indicator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" Brake Hold Indicator "
        android:id="@+id/textView308"
        android:textSize="40sp"
        android:layout_below="@+id/imageView140"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="When activated Honda Brake Hold automatically holds the brakes for the driver once a complete stop is made. The driver is able to remove his or her foot from the brake pedal once stopped without the car rolling forward or backwards. Once the driver presses the gas pedal the vehicle automatically releases the brakes in order to allow the vehicle to start moving again. This system will not work if your seatbelt is not fastened. "
        android:id="@+id/textView309"
        android:layout_below="@+id/textView308"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"/>
</RelativeLayout>
