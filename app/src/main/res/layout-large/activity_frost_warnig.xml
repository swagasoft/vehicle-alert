<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#060606"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="coding.swagasoft.vehiclealert.FrostWarnigActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView145"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/frost_warning_indicator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Winter or Frost Warning Indicator"
        android:textSize="40dp"
        android:id="@+id/textView318"
        android:layout_below="@+id/imageView145"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="The winter mode indicator lets you now when you&apos;re driving on winter mode. If it&apos;s flashing, an error with the system has been detected. There are 2 stages to this light being illuminated depending on the temperature outside. The light first turns on when the outside air starts to reach freezing temperatures, around 35Â°.This warning light will turn on before that point to warn the driver that ice may start forming. In this stage, the light will be amber in color. As temperatures get lower and lower, the light will turn to red to indicate that the outside temperatures are below freezing and that ice is a real possibility.  "
        android:id="@+id/textView319"
        android:layout_below="@+id/textView318"
        android:layout_alignParentEnd="true" />


</RelativeLayout>

</ScrollView>
