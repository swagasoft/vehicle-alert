<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#060606"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="coding.swagasoft.vehiclealert.CrawlControlActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView110"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/crawl_control_indicator_symbol" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Low Speed and Grade Assist"
        android:id="@+id/textView242"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:layout_below="@+id/imageView110"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="If your car is equipped with the downhill assist control , you have the capability of driving down a steep grade without having to use the brakes. This is important because riding your brakes for a long period of time, such as going down the side of a mountain, can overheat the brakes and reduce their effectiveness.   "
        android:id="@+id/textView243"
        android:layout_below="@+id/textView242"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
