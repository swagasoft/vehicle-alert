<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#060606"
    tools:context="coding.swagasoft.vehiclealert.FilterClongActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView34"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/air_filter_clogged_indicator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Air Filter Clong Indicator"
        android:id="@+id/textView76"
        android:layout_below="@+id/imageView34"
        android:textSize="40dp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Internal combustion engines require a decent amount of air in order to keep them running. Unfortunately, things like dust and pollen in the air are not good for your engine. This is where the air filter is essential in collecting any debris floating in the air and preventing it from getting inside your engine. The dirty air filter warning light turns on when there is reduced airflow to the engine, which affects your car&apos;s gas mileage and performance. "
        android:id="@+id/textView77"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView76"
        android:layout_alignParentStart="true" />
</RelativeLayout>
