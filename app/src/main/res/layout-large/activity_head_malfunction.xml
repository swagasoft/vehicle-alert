<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#060606"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="coding.swagasoft.vehiclealert.HeadMalfunctionActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView94"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/headlight_malfunction" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Headlamp Malfunction"
        android:textSize="40sp"
        android:id="@+id/textView212"
        android:textColor="#ffffff"
        android:layout_below="@+id/imageView94"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="A headlamp leveling system adjusts the height of the cut-off line to the load condition of the vehicle. This is supposed to avoid blinding oncoming traffic when the vehicle is loaded. Manual and automatic headlamp leveling systems are installed in current vehicle models.  This indicates a fault in the system.   "
        android:id="@+id/textView213"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView212"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
